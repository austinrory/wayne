<% provide :title, "Finish" %>

<body style="background-image:url(/images/char/<%=@char.downcase.split[0]%>.png)">

<h1 class="title">Finished</h1>

<div class="text" id="finish">
<p>You got <%= session[:s] %> points. <strong><%= @message %></strong> You earned the level of:</p>
<p style="font-size:45px"> <strong><%= @char %>!</strong></p>
</div>

<a class="button" id="home" href="/game/new" style="text-decoration:none">
		<div class="button_text">
			<p>Play Again!</p>
		</div>
</a>

</body>

